<Window x:Class="WpfApplication1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="350" Width="525" FontFamily="Calibri">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button_login" Content="Login" HorizontalAlignment="Left" Margin="126,200,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" BorderThickness="1" Click="button_login_Click"/>
        <Button x:Name="button_register" Content="Register" HorizontalAlignment="Left" Margin="309,200,0,0" VerticalAlignment="Top" Width="75" Click="button_register_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox_username" HorizontalAlignment="Left" Height="23" Margin="126,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="258" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="passwordBox_password" HorizontalAlignment="Left" Margin="126,135,0,0" VerticalAlignment="Top" Width="258" Height="23" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
